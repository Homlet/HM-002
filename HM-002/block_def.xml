<!--
  BLOCK TYPES LISTED IN FOLLOWING FORMAT:
  
  <Block        : new Block
    block_type  : integer, block type to associate parameters with (taken from update::world::block::BlockType)
    r           : natural number, texture r coordinate, used for any unspecified faces
    
    front_r     : natural number, front face  texture r coordinate
    back_r      : natural number, back face   texture r coordinate
    right_r     : natural number, right face  texture r coordinate
    left_r      : natural number, left face   texture r coordinate
    top_r       : natural number, top face    texture r coordinate
    bottom_r    : natural number, bottom face texture r coordinate
  />
-->

<Definitions>
  <!-- BlockType_Dirt -->
  <Block
    block_type = "1"
    r          = "2"
  />

  <!-- BlockType_Grass -->
  <Block
    block_type = "2"
    r          = "0"
    
    front_r  = "1"
    back_r   = "1"
    right_r  = "1"
    left_r   = "1"
    bottom_r = "2"
  />

  <!-- BlockType_Rock -->
  <Block
    block_type = "3"
    r          = "3"
  />

  <!-- BlockType_Sand -->
  <Block
    block_type = "4"
    r          = "4"
  />
</Definitions>
